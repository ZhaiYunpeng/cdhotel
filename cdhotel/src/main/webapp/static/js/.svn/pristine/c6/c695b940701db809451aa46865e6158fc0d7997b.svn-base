Module={
		//入口函数 
	init:function(){
			Module.addAllPeopleTable();
	},  
	//页面控制
	mapPeopleCon_bar:function(){
		$("#mapPeopleCon").show();
		$("#Tasking").hide();
	},
	Tasking_bar:function(){ 
		$("#Tasking").show();
		$("#mapPeopleCon").hide(); 
