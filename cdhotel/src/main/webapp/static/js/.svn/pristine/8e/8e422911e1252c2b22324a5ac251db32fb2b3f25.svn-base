Module = {
	// 入口函数
	init : function() {
		Module.addAllPeopleTable();
	},
	// 页面控制
	mapPeopleCon_bar : function() {
		$("#mapPeopleCon").show();
		$("#Tasking").hide();
	},
	Tasking_bar : function() {
		$("#Tasking").show();
		$("#mapPeopleCon").hide();
	},
	// 新加mapServer服务
	addNewServer : function() {

		layui.use('form', function() {
			var form = layui.form;
			form.on('submit(newServer)', function(data) {
				$.ajax({
					url : "http://localhost:8080/map/addOrupdate.action",
					dataType : 'json',
					type : "post",
					data : data.field

				});
				console.log(data.field) // 当前容器的全部表单字段，名值对形式：{name: value}
				return false; // 阻止表单跳转。如果需要表单跳转，去掉这段即可。
			});
		});

	},
	// 详细信息表
	mapDistribution : function(e, r) {
		var item_name = r;
		var item_id = e;
		console.log(e);
		layui
				.use(
						[ 'layer', 'form', 'element', 'table' ],
						function() {
							var layerEle = layui.layer;
							var form = layui.form;
							var table = layui.table;

							var register_win = layerEle
									.open({
										type : 1,
										title : '地图服务信息',
										content : '<table id="peopleDetailsTable" lay-filter="PeopleDet"></table>'
												+ ' <script id="peo_Man" type="text/html">'
												+ '<a class="layui-btn layui-btn-xs"  lay-event="edit">修改</a>'
												+ ' <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a> '
												+ '</script>',
										area : [ '1000px', '400px' ]
									});

							table
									.render({
										elem : '#peopleDetailsTable',
										url : 'http://localhost:8080/map/platList.action?uid='
												+ item_id // 数据接口
										/* ,page: true //开启分页 */
										,
										width : 990,
										cols : [ [ // 表头
										{
											field : 'mapid',
											title : '地图编号',
											width : 90
										}, {
											field : 'system',
											title : '坐标系',
											width : 90
										}, {
											field : 'category',
											title : '数据类别',
											width : 90
										}, {
											field : 'type',
											title : '数据类型',
											width : 80
										}, {
											field : 'detailurl',
											title : '地图参数',
											width : 100
										}, {
											field : 'mapurl',
											title : '查看地图',
											width : 180
										}, {
											field : 'startdate',
											title : '开始日期',
											width : 100
										}, {
											field : 'valid',
											title : '时效',
											width : 60
										}, {
											field : 'state',
											title : '状态',
											width : 60
										}, {
											fixed : '',
											width : 128,
											align : 'center',
											toolbar : '#peo_Man'
										} ] ]
									});

							// 监听工具条
							table.on('tool(PeopleDet)', function(obj) {
								var data = obj.data;
								console.log(data);
								if (obj.event === 'del') {
									layer.confirm('真的删除行么', function(index) {
										obj.del();
										layer.close(index);
									});
								} else if (obj.event === 'edit') {
									Module.editMapSever(data, item_name);
								}
							});

						});
	},
