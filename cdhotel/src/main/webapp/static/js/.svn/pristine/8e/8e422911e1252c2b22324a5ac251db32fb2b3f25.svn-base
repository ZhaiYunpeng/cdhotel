							var form = layui.form, layer = layui.layer;
							form
									.on(
											'submit(changeServer)',
											function(data) {
												$
														.ajax({
															url : "http://localhost:8080/map/addOrupdate.action",
															dataType : 'json',
															type : "post",
															data : data.field

														});

											});

							layer.open({
								type : '1',
