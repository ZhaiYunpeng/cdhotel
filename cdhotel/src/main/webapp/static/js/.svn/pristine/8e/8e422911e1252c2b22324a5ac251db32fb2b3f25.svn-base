	},
	// 验证用户名是否存在
	testUsername_setting : function() {
		var username_val = $("#username_input").val();
		// console.log(username_val);
		if (username_val != "") {
			$.post("../checkusername.action", {
				"username" : username_val
			}, function(data) {
				if (data == 1) {
					layui.use('layer', function() {
						var layer = layui.layer;

						layer.msg('该用户名不存在', {
							time : 5000
						});
					});
				} else if (data == 2) {
					// $("#s1").html("<font color='red'>用户名已经被占用</font>");
					// Module.win_tip("用户名已经被占用");
				}
			});
		}
	},
	// 用户信息表
	addAllPeopleTable : function() {

		layui.use('table', function() {
			var table = layui.table;
			// 第一个实例
			table.render({
				elem : '#peopleControlTable',
				width : 730,
				url : 'http://localhost:8080/map/userlist.action' // 数据接口
				/* ,page: true //开启分页 */
				,
				cols : [ [ // 表头
				{
					field : 'uid',
					title : 'ID',
					width : 80
				}, {
					field : 'username',
					title : '用户名',
					width : 100
				}, {
					field : 'activityData',
					title : '活动的地图服务',
					width : 180,
					sort : true
				}, {
					field : 'outData',
					title : '失效的地图服务',
					width : 180
				}, {
					fixed : '',
					width : 184,
					align : 'center',
					toolbar : '#barDemo'
				} ] ]
			});

			// 监听工具条
			table.on('tool(testPeopleCon)', function(obj) {
				var data = obj.data;
				if (obj.event === 'del') {

					layer.confirm('删除用户的话，此用户下的所有地图服务也将被删除，确定删除吗？', function(
							index) {
						obj.del();
						Module.delectPeopleItem(data.uid);
						layer.close(index);
					});

				} else if (obj.event === 'details') {
					Module.mapDistribution(data.uid, data.username);

				}
			});
		});
	},
	delectPeopleItem : function(e) {
		var ID_item = e;
		console.log(ID_item);
		$.ajax({
			url : "http://localhost:8080/map/userdelete.action",
			dataType : 'json',
			type : "post",
			data : {
				uid : ID_item
			}

		});

	}
}
$(function() {
	Module.init();
});